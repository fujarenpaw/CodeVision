{
  "name": "codevision",
  "displayName": "CodeVision",
  "description": "Visualize code structure with butterfly graphs",
  "version": "0.0.3",
  "publisher": "CodeVision",
  "repository": {
    "type": "git",
    "url": "https://github.com/fujarenpaw/CodeVision.git"
  },
  "engines": {
    "vscode": "^1.99.1"
  },
  "icon": "icon.png",
  "categories": [
    "Visualization",
  ],
  "keywords": [
    "visualization",
    "code-structure",
    "call-tree",
    "butterfly-graph",
    "dependency-graph",
    "code-analysis",
    "programming",
    "developer-tools"
  ],
  "activationEvents": [
    "onCommand:codevision.showButterflyGraph"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codevision.showButterflyGraph",
        "title": "Show Butterfly Graph"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "codevision.showButterflyGraph",
          "group": "navigation",
          "when": "editorHasSelection"
        }
      ]
    },
    "configuration": {
      "title": "Butterfly Graph",
      "properties": {
        "butterflyGraph.callerLevels": {
          "type": "number",
          "default": 2,
          "minimum": 1,
          "maximum": 5,
          "description": "Number of caller levels to display"
        },
        "butterflyGraph.calleeLevels": {
          "type": "number",
          "default": 2,
          "minimum": 1,
          "maximum": 5,
          "description": "Number of callee levels to display"
        },
        "butterflyGraph.maxNodesPerLevel": {
          "type": "number",
          "default": 10,
          "minimum": 1,
          "maximum": 50,
          "description": "Maximum number of nodes to display per level"
        },
        "butterflyGraph.theme": {
          "type": "string",
          "default": "default",
          "enum": [
            "default",
            "dark",
            "light"
          ],
          "description": "Theme for the butterfly graph visualization"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "test:coverage": "nyc npm run test",
    "test:watch": "npm run test -- --watch"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.3",
    "@types/node": "14.x",
    "@types/sinon": "^9.0.11",
    "@types/vscode": "^1.99.1",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "@vscode/test-electron": "^2.5.2",
    "chai": "^4.3.4",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "nyc": "^15.1.0",
    "sinon": "^9.2.4",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  },
  "dependencies": {
    "cytoscape": "^3.23.0"
  }
}
