{
  "name": "codevision",
  "displayName": "CodeVision",
  "description": "Visualize function call relationships as a butterfly graph",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "butterfly-graph.show",
        "title": "Show Butterfly Graph"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "butterfly-graph.show",
          "group": "navigation",
          "when": "editorHasSelection"
        }
      ]
    },
    "configuration": {
      "title": "Butterfly Graph",
      "properties": {
        "butterflyGraph.callerLevels": {
          "type": "number",
          "default": 2,
          "minimum": 1,
          "maximum": 5,
          "description": "Number of caller levels to display"
        },
        "butterflyGraph.calleeLevels": {
          "type": "number",
          "default": 2,
          "minimum": 1,
          "maximum": 5,
          "description": "Number of callee levels to display"
        },
        "butterflyGraph.maxNodesPerLevel": {
          "type": "number",
          "default": 10,
          "minimum": 1,
          "maximum": 50,
          "description": "Maximum number of nodes to display per level"
        },
        "butterflyGraph.theme": {
          "type": "string",
          "default": "default",
          "enum": ["default", "dark", "light"],
          "description": "Theme for the butterfly graph visualization"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTests.js"
  },
  "devDependencies": {
    "@types/cytoscape": "^3.21.9",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.3",
    "@types/node": "^14.18.63",
    "@types/vscode": "^1.99.1",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.9.5",
    "vscode-test": "^1.6.1"
  },
  "dependencies": {
    "cytoscape": "^3.23.0"
  }
}
